.stats {
    margin: 20px 0;
    padding: 10px;
}

.stats__title {
    padding: 40px 0 20px 0;
    text-align: center;
}

.legend {
    list-style: none;
    padding: 0;
    margin: 1em 0;
    font-size: 0.9rem;
}

.legend__item {
    float: right;
    padding: 0;
    margin: 0 0.5em 0.3em 0;
}

.legend__item__color {
    border-radius: 50%;
    display: inline-block;
    height: 0.5em;
    margin-bottom: 0.25em;
    margin-right: 0.5em;
    width: 0.5em;
}

@media screen and (min-width: 700px) {
    .stats {
        margin: 20px auto;
        width: 700px;
        padding: 0;
    }
}
