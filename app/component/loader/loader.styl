loader-size = 20px
border-color    = rgba(219, 142, 56, 0.5)
border-color-bg = rgba(219, 142, 56, 0.2)
border-width = 3px

.loader
    border-bottom: border-width solid border-color-bg
    border-left:   border-width solid border-color
    border-right:  border-width solid border-color-bg
    border-top:    border-width solid border-color-bg
    font-size: 10px
    left: 50%
    margin-left: -(loader-size/2)
    position: absolute
    text-indent: -9999em

    -webkit-animation: spin 1.1s infinite linear
    animation: spin 1.1s infinite linear

    &, &:after
        border-radius: 50%
        width:  loader-size
        height: loader-size

    &.is-visible
        display: block

    &.is-hidden
        display: none


@-webkit-keyframes spin
    0%
        -webkit-transform: rotate(0deg)
        transform: rotate(0deg)
    100%
        -webkit-transform: rotate(360deg)
        transform: rotate(360deg)


@keyframes spin
    0%
        -webkit-transform: rotate(0deg)
        transform: rotate(0deg)
    100%
        -webkit-transform: rotate(360deg)
        transform: rotate(360deg)