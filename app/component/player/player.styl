.player__hero-icon
    display: inline-block
    width: 24px
    height: $row-height
    line-height: $row-height
    background-position: center center
    background-repeat: no-repeat
    background-size: contain
    vertical-align: middle


hero-icon(id)
    .player__hero-icon--{id}
        @extend .player__hero-icon
