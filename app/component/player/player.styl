$row-height = 24px
$icon-margin = 5px


.digit-border
    border-left: 1px solid #aaa

.player
    margin: 0
    padding: 0
    display: flex
    color: #aaa

    transition: all 0.3s ease
    background-color: #ddd
    cursor: pointer

    &:hover
        background-color: rgba(253, 227, 167, 0.4)
    &.is-expanded
        background-color: rgba(253, 227, 167, 1.0)

.player__wrapper--left
    flex: 3

.player__wrapper--right
    flex: 1
    display: flex

.player__name
    line-height: $row-height
    height: $row-height
    display: inline-block
    color: #aaa
    font-weight: 200
    vertical-align: middle
    margin-left: $icon-margin

.player__name--in-team
    @extend .player__name
    color: #000

.player__kills 
    flex: 1
    text-align: center
    line-height: $row-height
    height: $row-height
    color: #27ae60


.player__deaths
    flex: 1
    text-align: center
    line-height: $row-height
    height: $row-height
    color: #c0392b
    @extend .digit-border


.player__assists
    flex: 1
    text-align: center
    line-height: $row-height
    height: $row-height
    color: #7f8c8d
    @extend .digit-border


.player__stats
    font-size: 80%
    padding-top: 5px
    visibility: visible

    opacity: 1
    transform: none
    transition: all 0.15s ease

    &.is-hidden
        padding-top: 0
        visibility: hidden
        transform: translate3d(-10%, 0, 0)
        opacity: 0.5

.player__stats__label
    float: left
    font-weight: 400
    color: #333
    margin: 0
    margin-left: $row-height+$icon-margin
    padding-bottom: $icon-margin
    width: 30px
    
    &:nth-of-type(2n+1)
        clear: left
    

.player__stats__value
    float: left
    color: #333
    padding-bottom: $icon-margin
    width: 40px


@keyframes fadeInLeft
    0%
        opacity: 0
        transform: translate3d(-100%, 0, 0)
    100%
        opacity: 1
        transform: none


