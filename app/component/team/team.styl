wide = "screen and (min-width: 700px)"
$row-height = 24px
$icon-margin = 5px


.digit-border
    border-left: 1px solid #aaa


.team
    &:nth-of-type(2)
        margin-top: 20px

    @media wide
        &:nth-of-type(2)
            margin-top: 0


.team--winning .team__name
    color: #27ae60


.team__name
    font-weight: 300
    font-size: 18px
    display: block
    margin-bottom: 10px


.team__name__winning
    padding-left: 10px


.team__players
    list-style: none
    margin: 0
    padding: 0
    line-height: 1.4em


.player
    margin: 0
    padding: 0
    display: flex
    color: #aaa

.player__wrapper--left
    flex: 3

.player__wrapper--right
    flex: 1
    display: flex

.player__name
    line-height: $row-height
    height: $row-height
    display: inline-block
    font-weight: 400
    color: #000
    vertical-align: middle
    margin-left: $icon-margin


.player__kills 
    flex: 1
    text-align: center
    line-height: $row-height
    height: $row-height
    color: #27ae60


.player__deaths
    flex: 1
    text-align: center
    line-height: $row-height
    height: $row-height
    color: #c0392b
    @extend .digit-border


.player__assists
    flex: 1
    text-align: center
    line-height: $row-height
    height: $row-height
    color: #7f8c8d
    @extend .digit-border

.player__stats__label
    float: left
    clear: left
    font-weight: bold
    color: #333
    margin: 0
    margin-left: $row-height+$icon-margin
    padding: $icon-margin 0
    

.player__stats__value
    float: left
    color: #333
    padding: $icon-margin


// ========================================================
//  HERO ICONS
// ========================================================
.player__hero-icon
    display: inline-block
    width: 24px
    height: $row-height
    line-height: $row-height
    background-position: center center
    background-repeat: no-repeat
    background-size: contain
    vertical-align: middle


hero-icon(id)
    .player__hero-icon--{id}
        @extend .player__hero-icon
        background-image: url(../../images/heroes/id/icon_128.jpg)

