$row-height = 24px


.team--winning .team__name
    color: #27ae60


.team__name
    font-weight: 300
    font-size: 18px
    display: block


.team__name__winning
    padding-left: 10px


.team__players
    list-style: none
    margin: 0
    padding: 0
    display: block
    line-height: 1.4em


.player
    margin: 0
    padding: 0
    display: table-row
    color: #aaa
    line-height: $row-height
    height: $row-height


.player__name
    display: table-cell
    vertical-align: middle
    font-weight: 400
    color: #000
    padding-left: 5px
    padding-right: 15px


.player__kills 
    display: table-cell
    vertical-align: middle
    color: #27ae60
    padding-left: 5px


.player__deaths
    display: table-cell
    vertical-align: middle
    color: #c0392b
    padding-left: 5px


.player__assists
    display: table-cell
    vertical-align: middle
    color: #7f8c8d
    padding-left: 5px



// ========================================================
//  HERO ICONS
// ========================================================
.player__hero-icon
    display: inline-block
    width: 24px
    height: 24px
    background-position: center center
    background-repeat: no-repeat
    background-size: contain


hero-icon(id)
    .player__hero-icon--{id}
        @extend .player__hero-icon
        background-image: url(../../images/heroes/id/icon_128.jpg)

